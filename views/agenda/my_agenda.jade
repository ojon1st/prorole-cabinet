extends ../layout

append styles
  link(href='/stylesheets/fullcalendar/fullcalendar.min.css', rel='stylesheet')
  link(href='/stylesheets/fullcalendar/fullcalendar.print.min.css', rel='stylesheet', media='print')
  style.
    body {
    //margin: 40px 10px;
    padding: 0;
    font-family: "Lucida Grande", Helvetica, Arial, Verdana, sans-serif;
    font-size: 14px;
    }
    #calendar {
    background-color: white;
    max-width: 90%;
    margin: 0 auto;
    }
    .fc-event .fc-content > span:first-child:before, .event-category:before{
      display:none;
    }
    .event-bg-affaire{
      color:black!important;
      background-color:white!important;
    }
    .event-bg-affaire-retard{
      color:black!important;
      background-color:white!important;
    }
    .text-upper-retard{
      background-color:red!important;
      color:white!important;
      text-transform: uppercase;
    }
    .fc-title{ text-transform: uppercase; }
    .fc-day-header{padding-top: 5px!important; padding-bottom: 5px!important;text-transform: capitalize;}
block content
  .row
    .col-md-12
      ol.breadcrumb
        li
          a(href='/')
            | Accueil
        li
          | Agenda
        li.active
          | #{title}
  #calendar.padding-10

