  script.
    $(document).ready(function(){
      //$(".event-category:before").css('display','none');
      //});
    });
  script(src='/assets/js/custom-calendrier-mise-etat.js')
  script(src='/assets/js/custom-new-dossier.js')
  script(src='/javascripts/fullcalendar/moment.min.js')
  script(src='/javascripts/fullcalendar/fullcalendar.min.js')
  script(src='/javascripts/fullcalendar/locale-all.js')
  script(src='/javascripts/my_agenda.js')
  
  