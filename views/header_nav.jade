header.topbar.navbar.navbar-inverse.navbar-fixed-top.inner
  // start: TOPBAR CONTAINER
  .container
    .navbar-header
      if (message)
        | #{message}
      a.sb-toggle-left.hidden-md.hidden-lg(href='#main-navbar')
        i.fa.fa-bars
      // start: LOGO
      
      // end: LOGO
    .topbar-tools
      // start: TOP NAVIGATION MENU
      ul.nav.navbar-right
        // start: USER DROPDOWN
        li.dropdown.current-user.hidden-xs
          a.dropdown-toggle(data-toggle='dropdown', data-hover='dropdown', data-close-others='true', href='#')
            if (utilisateur)
              img.img-circle(src='#{utilisateur.avatar}', width='30px', height='30px',alt='')
              span.username.hidden-xs #{utilisateur.prenom} #{utilisateur.nom}
              i.fa.fa-caret-down
          ul.dropdown-menu.dropdown-dark
            li
              a(href='/')
                | Mon profil
            li
              a(href='/agendas/agenda')
                | Mon agenda
            li
              a(href='/logout')
                | Deconnecter
        li.current-user.visible-xs(style='padding-top:10px;')
          a(href='#')
            if (utilisateur)
              img.img-circle(src='#{utilisateur.avatar}', width='30px', height='30px',alt='')
              span.username.hidden-xs #{utilisateur.prenom} #{utilisateur.nom}
        // end: USER DROPDOWN
        //- li.right-menu-toggle
          a.sb-toggle-right(href='#')
            i.fa.fa-globe.toggle-icon
            i.fa.fa-caret-right
            span.notifications-count.badge.badge-default.hide  3
      // end: TOP NAVIGATION MENU
      // end: TOPBAR CONTAINER
